{
    "name": "express-spa",
    "version": "1.0.0",
    "description": "UTHP Project",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "dev": "npm-run-all -p watch:css dev:server",
        "dev:server": "nodemon app.js",
        "build:css": "postcss public/styles/tailwind.css -o public/styles/styles.css",
