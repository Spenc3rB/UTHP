<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/styles/styles.css" rel="stylesheet">
  <title>Responsive Header</title>
</head>
<body class="bg-gray-100">
  <header class="bg-green-900 shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <a href="#" class="text-xl font-bold text-gray-900"><img src="/img/logo-uthp.png" alt="Logo"></a>
        </div>
        <div class="hidden md:flex space-x-4">
          <a href="/" class="text-red-500 hover:text-gray-300">Home</a>
          <a href="/about" class="text-red-500 hover:text-gray-300">About</a>
          <a href="/tools" class="text-red-500 hover:text-gray-300">Tools</a>
          <a href="#" class="text-red-500 hover:text-gray-300">Contact</a>
          @if (userId)
          <a href="/logout" class="text-red-500 hover:text-gray-300">Logout</a>
          @endif
           
        </div>
        <div class="md:hidden">
          <button type="button" class="text-gray-900 focus:outline-none" id="menu-button">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div class="md:hidden hidden" id="mobile-menu">
      <a href="#" class="block px-4 py-2 text-gray-300 hover:bg-gray-300">Home</a>
      <a href="/about" class="block px-4 py-2 text-gray-900 hover:bg-gray-300">About</a>
      <a href="#" class="block px-4 py-2 text-gray-900 hover:bg-gray-300">Services</a>
      <a href="#" class="block px-4 py-2 text-gray-900 hover:bg-gray-300">Contact</a>
      @if (user_id)
      <a href="#" class="block px-4 py-2 text-gray-900 hover:bg-gray-300">Logout</a>
      @else
      <a href="#" class="block px-4 py-2 text-gray-900 hover:bg-gray-300">Not Logged in @yield('user_id')</a>
      @endif
    </div>
  </header>
   
  <div class="max-w-7xl mx-auto px-4 mx-4 sm:px-6 lg:px-8">
    @!section('content')
  </div>
    


  <script>
    document.getElementById('menu-button').addEventListener('click', function () {
      var menu = document.getElementById('mobile-menu');
      if (menu.classList.contains('hidden')) {
        menu.classList.remove('hidden');
      } else {
        menu.classList.add('hidden');
      }
    });
  </script>
</body>

</html>
